@model  IEnumerable<CBUSA.Domain.Product>



<div class="color-border">
   
            @*<div class="highlight-title-text">@Item.ProductCategoryName</div>*@

            @foreach (var Item in Model)
            {
                <div class="row">
                    <div class="col-md-1">
                        <input type="checkbox" name="ChkContractProductSelect" checked>
                        <input type="hidden" value="@Item.ProductId" />
                    </div>
                    <div class="col-md-10">@Item.ProductName</div>
                </div>
            }
        

    <div class="row margin-top20">
        <button type="button" id="BtnModifyContractProduct" class="btn btn-info" data-toggle="modal" data-target="#modifyProducts">Modify Products</button>
        <button type="button" id="BtnSaveContractProduct" class="btn btn-info">Save</button>
        <a href="#" title="" id="BtnProductViewDetails">View All</a>
    </div>
</div>

