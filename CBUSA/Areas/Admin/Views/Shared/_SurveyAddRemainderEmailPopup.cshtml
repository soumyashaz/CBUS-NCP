@model CBUSA.Areas.Admin.Models.SurveyEmailSettingsViewModel
<div id="DivConfigureRemainderEmail">
    @*<div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Configure Invite Email</h4>
        </div>*@
    <div class="modal-body confInvRemSaveEmail">
        <div class="form-group">
            <div class="col-md-3"><label class="control-label">Subject:</label></div>
            <div class="col-md-9">
                @*<input class="form-control" id="EmailSubject" name="EmailSubject" type="text" required>*@
                @Html.TextBoxFor(x => x.RemainderEmailSubject, new { @class = "form-control", required = "required" })
                <span class="k-invalid-msg" data-for="EmailSubject"></span>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="form-group">
            <div class="col-md-3"><label class="control-label">Email content:</label></div>
            <div class="col-md-9">
                @*<textarea id="editor" name="editor" rows="10" cols="30" style="width:100%;height:300px"></textarea>*@
                @Html.TextAreaFor(x => x.RemainderEmailBody, new { style = "width:100%; height:250px", rows = "10", cols = "30" })
                <span class="k-invalid-msg" data-for="EmailBody"></span>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-info" id="BtnSaveRemainderEmail">Save</button>
        <button type="button" class="btn btn-default new-btn" data-dismiss="modal" id="BtncancelRemainder">Cancel</button>
    </div>
</div>
