@model  CBUSA.Models.ProductControlVM

<div>
    @foreach (var Item in Model.ObjProductCategory)
    {
        if (Item.Product.Count > 0)
        {
            <div>
                <h5>@Item.ProductCategoryName</h5>
                <table style="width:100%" class="ShowProductTable">
                    @foreach (var Itemchild in Item.Product)
                    {
                        <tr>
                            <td style="width:20%" align="center">
                                <input type="checkbox" name="ChkProductSelect"  />
                                <input type="hidden" value="@Itemchild.ProductId" />
                            </td>
                            <td style="width:80%">
                                <span>@Itemchild.ProductName</span>

                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
    }
</div>