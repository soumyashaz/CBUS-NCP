@*@using Microsoft.AspNet.Identity*@
@using CBUSA.Areas.Admin.Models
@model CBUSA.Areas.Admin.Models.ManageUserViewModel

@*<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>*@

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @*@Html.AntiForgeryToken()*@
    @Html.HiddenFor(m => m.UserID)
    <div class="mainContentPanel">
        <div class="loginPageResize">
            <div class="panel panel-default">
                <div class="color-border" style="padding:24px">
                    <h4>Change Password Form</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="profileSection">
                        <div class="form-group">
                            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-5 control-label" })
                            <div class="col-md-7">
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 control-label" })
                            <div class="col-md-7">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                <div id="passwordMsg">
                                    <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="NewPassword" data-valmsg-for="NewPassword" id="NewPassword_validationMessage" role="alert"><span class="k-icon k-warning pull-left"> </span> <div style="text-align: left;"><p>Min. 8 character alpha-numeric password</p><p>Should have at least 1 upper case and 1 lower case letter</p><p>Should have at least one special character, e.g !, #, @Html.Raw('@'), %</p></div></span>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                            <div class="col-md-7">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row margin-top20">
                            <label class="col-md-5 control-label hidden-xs"> &nbsp; </label>
                            <div class="col-md-7"><input type="submit" value="Change password" class="btn btn-primary" /></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
