@using CBUSA.Areas.Admin.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CBUSA</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")" type="image/x-icon" />

    <!-- Stylesheet -->

    @Styles.Render("~/Content/css/style")
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>


<body>
    <!-- Start Header -->
    <header class="head-wrapper">
        <div class="container">
            <!--This bundle was moved by the Telerik VS Extensions for compatibility reasons-->
            <div class="row">
                <div class="col-md-4"><a href="#" title="CBUSA"><img src="@Url.Content("~/Content/Images/Logo.png")" class="logo" alt="CBUSA"></a></div>
                <div class="col-md-8"></div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- Start Body -->
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="mainContentPanel">
            <div class="container">
                <div class="row row-eq-height">
                    <div class="col-sm-12">
                        <div class="dividerHeight150p">
                            <div class="clearfix"></div>
                        </div>
                        <div class="loginPageResize">
                            <div class="panel panel-default">
                                <div class="color-border" style="padding:24px">
                                    <h3>Login to CBUSA</h3>
                                    <hr />
                                    <div class="loginPageUserPw">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="profileSection">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">User Name:</label>
                                            <div class="col-md-9" id="TdUserName">
                                                @(Html.Kendo().TextBox().Name("UserName")
                                                             .HtmlAttributes(new
                                                             {
                                                                                             // validationmessage = "*",
                                                                                             //@class = "width50",
                                                                                             required = "required",
                                                                 data_contractnameavailable = true,
                                                                 @class = "form-control"

                                                             })
                                                )
                                                <span class="k-invalid-msg" id="rr" data-for="UserName"></span>
                                                <input type="hidden" id="HdnValidationUserName" />
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Password:</label>
                                            <div class="col-md-9" id="TdPassword">
                                                @(Html.Kendo().TextBox().Name("Password")
                                                             .HtmlAttributes(new
                                                             {
                                                                                             // validationmessage = "*",
                                                                                             //@class = "width50",
                                                                                             type = "password",
                                                                 required = "required",
                                                                 data_contractnameavailable = true,
                                                                 @class = "form-control"

                                                             })
                                                )
                                                <span class="k-invalid-msg" id="rr" data-for="Password"></span>
                                                <input type="hidden" id="HdnValidationPassword" />
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="row margin-top20">
                                            <label class="col-md-3 control-label hidden-xs">
                                                &nbsp;
                                            </label>
                                            <div class="col-md-9 checkRadioLable">
                                                @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe, new { @class = "rembLeble" })
                                            </div>
                                            <div class="clearfix"></div>
                                            <label class="col-md-3 control-label hidden-xs"> &nbsp; </label>
                                            <div class="col-md-9"><button type="submit" class="btn btn-primary"><i class="fa fa-lock" aria-hidden="true"></i> Sign in</button></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dividerHeight250p">
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- End Body -->
    <!-- Start Footer -->
    <footer class="footer-wrapper">
        <div class="container"></div>
    </footer>
    <!-- End Footer -->
    <!-- Jquery Library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("div.bhoechie-tab-menu>div.list-group>a").click(function (e) {
                e.preventDefault();
                $(this).siblings('a.active').removeClass("active");
                $(this).addClass("active");
                var index = $(this).index();
                $("div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
                $("div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
            });
        });
    </script>
</body>
</html>
