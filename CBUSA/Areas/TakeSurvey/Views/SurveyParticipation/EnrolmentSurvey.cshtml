@using CBUSA.Models;
@model CBUSA.Areas.TakeSurvey.Models.TakeSurveyViewModel

@if (Model.Survey != null)
{

    <!-- Start Enrollment Survey -->

    <!-- Start 1/5 -->
    foreach (var Item in Model.Survey.Question.OrderBy(x => x.SurveyOrder))
    {
        <h3 class="text-center"><u>@Item.QuestionValue</u></h3>
        <div class="row btm-top-margin50 enrollmentSurveyBody">
            <div class="col-md-7">
                <div class="form-group">
                    <label>@Model.Survey.SurveyName</label>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    @if (Item.QuestionTypeId == (int)CBUSA.Domain.EnumQuestionType.TextBox)
                    {
                        @Html.TakeSurveyTextBoxTypeQuestion(Model.SurveyResult.Where(x => x.QuestionId == Item.QuestionId).FirstOrDefault());
                    }
                    else if (Item.QuestionTypeId == (int)CBUSA.Domain.EnumQuestionType.DropList)
                    {
                        @Html.TakeSurveyDropDownQuestion(Model.SurveyResult.Where(x => x.QuestionId == Item.QuestionId).FirstOrDefault(), Item.QuestionDropdownSetting)
                    }
                    else
                    {
                        if (Item.QuestionGridSetting.FirstOrDefault() != null)
                        {
                            @Html.TakeSurveyGridQuestion(
                                 Model.SurveyResult.Where(x => x.QuestionId == Item.QuestionId).ToList()
                            , Item.QuestionGridSetting.FirstOrDefault().QuestionGridSettingHeader)
                        }
                    }
                </div>
            </div>
            <div class="col-md-4 col-md-offset-1">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" style="width:20%">1/5</div>
                </div>
            </div>
        </div>
    }

    <div class="centerAlignPosition">
        <button type="button" class="btn btn-primary">Back</button>
        <button type="button" class="btn btn-success">Next</button>
        <button type="button" class="btn btn-info">Save &amp; Continue Later...</button>
        <button type="button" class="btn btn-warning">Save</button>
    </div>
    <div class="centerAlignPosition">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

}




